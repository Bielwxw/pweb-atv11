<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil do usu√°rio</title>
    <link rel="shortcut icon" href="/img/Perfil.png" type="image/x-icon">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('https://c1.wallpaperflare.com/preview/427/745/192/notebook-natural-laptop-macbook.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            text-align: center;
            padding: 20px;
            background-color: #adadadb6;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

        h1 {
            color: rgb(0, 0, 0);
            margin-bottom: 20px;
        }

        #minhaLista {
            list-style-type: none;
            padding: 0;
            margin: 0;
            text-align: left;
            margin-top: 20px;
        }

        #minhaLista li {
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 5px;
            display: flex;
            align-items: center;
            background-color: #f1f1f1;
            transition: background-color 0.3s;
        }

        #minhaLista li:hover {
            background-color: #e9e9e9;
        }

        #minhaLista li::before {
            content: "‚Ä¢";
            margin-right: 5px;
            color: #6c757d;
            font-weight: bold;
        }

        input[type="text"],
        input[type="date"] {
            padding: 10px;
            margin-right: 5px;
            border-radius: 5px;
            border: 1px solid #ced4da;
            font-size: 16px;
            width: calc(50% - 5px);
            box-sizing: border-box;
            margin-bottom: 10px; /* Adicionado */
        }

        .button-group {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .button-group button {
            margin: 0 5px;
        }

        button {
            padding: 10px 20px;
            cursor: pointer;
            border: none;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.3s;
            margin-top: 10px;
        }

        button:hover {
            background-color: #0056b3;
        }

        .btn-remover {
            background-color: #dc3545;
            margin-left: 5px;
        }

        .btn-remover:hover {
            background-color: #c82333;
        }

        a {
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            color: black;
            font-weight: bold;
            border: 2px solid rgb(145, 27, 27);
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        a:hover {
            background-color: black;
            color: #fff;
        }

        #adicionarItem {
            background-color: rgb(33, 179, 33) !important;
            border: none;
        }

    </style>
</head>

<body>

    <div class="container">
        <h1>Seja bem-vindo, <%= name %> üëãüèª</h1>
        <a href="/lista">Lista de usu√°rios</a>
        <br><br>
        <form id="formTarefa">
            <input type="text" id="inputItem" placeholder="Digite sua tarefa" required>
            <input type="date" id="inputData" required>
            <div class="button-group">
                <button type="submit" id="adicionarItem">Adicionar</button>
                <button type="button" id="removerItem" class="btn-remover">Remover</button>
            </div>
        </form>

        <h1>Lista de Tarefas</h1>
        <ul id="minhaLista"></ul>
    </div>

    <script>
        const lista = document.getElementById("minhaLista");
        const formTarefa = document.getElementById("formTarefa");
        const inputItem = document.getElementById("inputItem");
        const inputData = document.getElementById("inputData");
        const botaoRemover = document.getElementById("removerItem");

        formTarefa.addEventListener("submit", function (event) {
            event.preventDefault();
            adicionarTarefa();
        });

        function adicionarTarefa() {
            const novoItem = inputItem.value.trim();
            const novaData = inputData.value;

            if (novoItem && novaData) {
                const novoElemento = document.createElement("li");
                const checkbox = document.createElement("input");
                checkbox.type = "checkbox";

                novoElemento.appendChild(checkbox);
                novoElemento.appendChild(document.createTextNode(` ${novoItem} - ${novaData}`));

                lista.appendChild(novoElemento);

                inputItem.value = "";
                inputData.value = "";

                checkbox.addEventListener("change", function () {
                    if (this.checked) {
                        lista.appendChild(this.parentNode);
                        this.parentNode.style.textDecoration = "line-through";
                    } else {
                        lista.insertBefore(this.parentNode, lista.firstChild);
                        this.parentNode.style.textDecoration = "none";
                    }
                });
            }
        }
        botaoRemover.addEventListener("click", () => {
    const tarefasMarcadas = lista.querySelectorAll("input[type='checkbox']:checked");

    tarefasMarcadas.forEach((checkbox) => {
        const listItem = checkbox.parentNode;
        listItem.parentNode.removeChild(listItem);
    });
});


    </script>

</body>

</html>
